# Insider Trading Detector Configuration
# Copy this file to .env and fill in your values

# Kalshi API credentials (optional - some features work without auth)
KALSHI_API_KEY=
KALSHI_API_SECRET=
KALSHI_USE_DEMO=false

# Database path (default: data/insider_detector.db)
DATABASE_PATH=./data/insider_detector.db

# Logging
DEBUG=false
LOG_LEVEL=INFO

# Telegram notifications (optional)
# Get your bot token from @BotFather on Telegram
# Get your chat ID by messaging your bot and checking:
# https://api.telegram.org/bot<YOUR_TOKEN>/getUpdates
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Discord notifications (optional)
# Create a webhook in your Discord server: Server Settings > Integrations > Webhooks
DISCORD_WEBHOOK_URL=
