# Insider Trading Detector Configuration
# Copy this file to .env and fill in your values

# Kalshi API credentials (optional - some features work without auth)
KALSHI_API_KEY=
KALSHI_API_SECRET=
KALSHI_USE_DEMO=false

# Database path (default: data/insider_detector.db)
DATABASE_PATH=./data/insider_detector.db

# Logging
DEBUG=false
LOG_LEVEL=INFO

# Webhook for alerts (optional)
# ALERT_WEBHOOK_URL=https://your-webhook-url.com/alerts
